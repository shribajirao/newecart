<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow"
    android:padding="@dimen/dimen_10dp">

    <RelativeLayout
        android:id="@+id/lytItemDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtOrderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/tvOrderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textAlignment="viewStart"
            android:textColor="@color/txt_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvOrderID"
            android:layout_marginStart="3dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textAlignment="viewStart"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tvItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTotalItems"
            android:layout_marginStart="3dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/gray" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_below="@id/tvItems"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@color/lightest_gray" />

        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginStart="3dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textAlignment="viewStart"
            android:textColor="@color/gray" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvOrderDate"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/dimen_5dp"
            tools:ignore="RelativeOverlap">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_5dp"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewOrderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvOrderDate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            app:cardBackgroundColor="@color/bg_color"
            app:cardCornerRadius="@dimen/dimen_5dp"
            tools:ignore="RelativeOverlap">

            <TextView
                android:id="@+id/tvOrderType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/dimen_5dp"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_menu_tracker_"
                app:drawableTint="@color/gray" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>